<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.SpinnerItem</item>
    </style>

    <style name="AppTheme.SpinnerItem" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.LeftColumnTextView">
        <item name="android:layout_width">@dimen/item_left_column_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.FormText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

</resources>
